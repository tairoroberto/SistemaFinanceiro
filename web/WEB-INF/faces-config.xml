<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <message-bundle>
            br.com.tairoroberto.sistemafinanceiro.resources.validacao
        </message-bundle>
        
        <resource-bundle>
            <base-name>br.com.tairoroberto.sistemafinanceiro.resources.sistema</base-name>
            <var>msg</var>
        </resource-bundle>

        <locale-config>
            <default-locale>pt</default-locale>
            <supported-locale>pt</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
    </application>

    <navigation-rule>
        <navigation-case>
            <from-outcome>Home</from-outcome>
            <to-view-id>/Home.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-outcome>ConsultaLancamento</from-outcome>
            <to-view-id>/ConsultaLancamento.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>